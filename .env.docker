# ============================================================================
# Docker Compose Environment Variables
# ============================================================================
# Copy this file to .env in the same directory as docker-compose.yml

# --------------------------------
# PostgreSQL Configuration
# --------------------------------
POSTGRES_USER=clara
POSTGRES_PASSWORD=clara_dev_password
POSTGRES_DB=clara

# --------------------------------
# TimescaleDB Configuration
# --------------------------------
TIMESCALE_USER=clara
TIMESCALE_PASSWORD=clara_analytics_password
TIMESCALE_DB=clara_analytics

# --------------------------------
# pgAdmin Configuration (Optional)
# --------------------------------
PGADMIN_EMAIL=admin@clara.local
PGADMIN_PASSWORD=admin

# ============================================================================
# Connection Strings for Clara Agent
# ============================================================================
# Use these in your clara-agent/.env.local file:

# REDIS_URL=redis://localhost:6379
# DATABASE_URL=postgresql://clara:clara_dev_password@localhost:5432/clara
# TIMESCALE_URL=postgresql://clara:clara_analytics_password@localhost:5433/clara_analytics

# For Docker-to-Docker communication (if agent runs in Docker):
# REDIS_URL=redis://redis:6379
# DATABASE_URL=postgresql://clara:clara_dev_password@postgres:5432/clara
# TIMESCALE_URL=postgresql://clara:clara_analytics_password@timescaledb:5432/clara_analytics
